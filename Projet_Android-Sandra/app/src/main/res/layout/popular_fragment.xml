<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment_Popular">

     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btnSearch"
            android:layout_alignBottom="@+id/btnSearch"
            android:layout_marginHorizontal="10dp"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="35dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnLang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:layout_toStartOf="@+id/btnFav"
            android:background="@android:color/transparent"
            android:onClick="onSearchClick"
            android:src="@drawable/ic_baseline_language_24"
            android:text="FR" />

        <ImageButton
            android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:background="@android:color/transparent"
            android:onClick="onSearchClick"
            android:src="@drawable/ic_baseline_search_24"
            android:text="Search" />

        <ImageButton
            android:id="@+id/btnFav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_toLeftOf="@id/btnSearch"
            android:background="@android:color/transparent"
            android:onClick="onSearchClick"
            android:src="@drawable/ic_baseline_favorite_24"
            android:text="Favoris" />

    </RelativeLayout>
         
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycled_popular"
        android:layout_above="@+id/relativeLayout2"
        android:layout_below="@+id/relativeLayout">

    </androidx.recyclerview.widget.RecyclerView>


    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/red_logo">

        <ImageButton
            android:id="@+id/btnPopular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="10dp"
            android:background="@android:color/transparent"
            android:onClick="onPopClick"
            android:src="@drawable/ic_baseline_local_fire_department_24"
            android:text="Popular" />


        <ImageButton
            android:id="@+id/btnUpcoming"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="10dp"
            android:background="@android:color/transparent"
            android:onClick="onUpClick"
            android:src="@drawable/ic_baseline_fiber_new_24" />
    </RelativeLayout>
</RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>